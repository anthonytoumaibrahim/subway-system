  "version": "2.0.0",
  "tasks": [
    {
      "label": "Laravel Server",
      "type": "shell",
      "command": "php artisan serve",
      "options": {
        "cwd": "./backend"
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "React",
      "type": "shell",
      "command": "npm start",
      "options": {
        "cwd": "./frontend"
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    }
  ]
}
